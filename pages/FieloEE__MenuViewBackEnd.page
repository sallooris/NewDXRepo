        <apex:pageBlockSectionItem >
          <iframe id="livePreview" src="" scrolling="no" ></iframe>
        </apex:pageBlockSectionItem>
        <apex:pageBlockSectionItem >
          <apex:panelGroup styleClass="fielosf-wireframe" layout="block">
            <apex:repeat value="{!sections}" var="s">
